<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="MageINIC_Core::core">
                    <resource id="MageINIC_BannerSlider::mageinic_bannerslider" title="Banner Slider"
                              sortOrder="10" translate="title">
                        <resource id="MageINIC_BannerSlider::bannerslider" title="Manage Banner"
                                  sortOrder="10" translate="title">
                            <resource id="MageINIC_BannerSlider::banner_action" title="Action"
                                      sortOrder="10" translate="title">
                                <resource id="MageINIC_BannerSlider::manage_banner" title="View" sortOrder="10"
                                          translate="title"/>
                                <resource id="MageINIC_BannerSlider::banner_delete" title="Delete" sortOrder="20"
                                          translate="title"/>
                                <resource id="MageINIC_BannerSlider::banner_save" title="Save" sortOrder="40"
                                          translate="title"/>
                                <resource id="MageINIC_BannerSlider::banner_edit" title="Edit" sortOrder="30"
                                          translate="title"/>
                            </resource>
                        </resource>
                        <resource id="MageINIC_BannerSlider::slider" title="Manage Slider"
                                  sortOrder="10" translate="title">
                            <resource id="MageINIC_BannerSlider::slider_action" title="Action"
                                      sortOrder="10" translate="title">
                                <resource id="MageINIC_BannerSlider::manage_slider" title="View" sortOrder="10"
                                          translate="title"/>
                                <resource id="MageINIC_BannerSlider::slider_delete" title="Delete" sortOrder="20"
                                          translate="title"/>
                                <resource id="MageINIC_BannerSlider::slider_edit" title="Edit" sortOrder="30"
                                          translate="title"/>
                                <resource id="MageINIC_BannerSlider::save" title="Save" sortOrder="40"
                                          translate="title"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="MageINIC_Core::core_config">
                                <resource id="MageINIC_BannerSlider::config_bannerslider"
                                          title="Banner Slider" translate="title"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
